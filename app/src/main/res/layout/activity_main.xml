<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/primary"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/onboarding"
                android:elevation="4dp"
                android:background="@drawable/title_bg"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextBodyLarge"
                    android:textColor="@color/primary"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are you starting with?"
                    app:drawableStartCompat="@drawable/asterisk"
                    app:drawableTint="@color/primary" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/feature_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp">
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/solidrb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Solid"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textAppearance="@style/TextBodyMedium"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/liquidrb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liquid"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textAppearance="@style/TextBodyMedium"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/solid"
                android:elevation="4dp"
                android:background="@drawable/title_bg"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/primary"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp"
                    android:textAppearance="@style/TextBodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How do you want to measure it?"
                    app:drawableStartCompat="@drawable/asterisk"
                    app:drawableTint="@color/primary" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Measure using molarity/normality"
                        android:textAllCaps="false"
                        android:textAlignment="viewStart"
                        app:iconPadding="15dp"
                        app:icon="@drawable/percent"
                        android:letterSpacing="0"
                        android:id="@+id/measureMolarity"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Measure using ppm/ppb/ppt"
                        android:textAlignment="viewStart"
                        app:iconPadding="15dp"
                        android:textAllCaps="false"
                        app:icon="@drawable/droplet"
                        android:letterSpacing="0"
                        android:id="@+id/measurePpm"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        app:iconPadding="15dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Measure element from compounds"
                        android:textAllCaps="false"
                        app:icon="@drawable/atom"
                        android:letterSpacing="0"
                        android:id="@+id/measureElement"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/liquid"
                android:elevation="4dp"
                android:background="@drawable/title_bg"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextBodyLarge"
                    android:textColor="@color/primary"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock Dilution"
                    app:drawableStartCompat="@drawable/asterisk"
                    app:drawableTint="@color/primary" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Dilute a solution"
                        android:textAllCaps="false"
                        android:textAlignment="viewStart"
                        app:iconPadding="15dp"
                        app:icon="@drawable/flask_conical"
                        android:letterSpacing="0"
                        android:id="@+id/measureDilution"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
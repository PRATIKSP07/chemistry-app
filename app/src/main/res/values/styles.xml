<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="TextBodySmall" parent="TextAppearance.Material3.BodySmall">
    </style>
    <style name="TextBodyMedium" parent="TextAppearance.Material3.BodyMedium">
    </style>
    <style name="TextBodyLarge" parent="TextAppearance.Material3.BodyLarge">
    </style>

    <style name="TipText">
        <item name="android:textAppearance">@style/TextBodySmall</item>

        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/md_theme_primary</item>

        <item name="android:textColor">@color/md_theme_primary</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LabelText">
        <item name="android:textAppearance">@style/TextBodyLarge</item>
        <item name="android:textColor">@color/md_theme_primary</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="StyleTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextAppearance">@style/TextBodyMedium</item>

        <item name="android:textColorHint">@color/md_theme_primary</item>

        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
    </style>

    <style name="StyleAutoCompleteTextView">
        <item name="android:textAppearance">@style/TextBodyLarge</item>

        <item name="android:background">@drawable/input_bg</item>

        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="InputField">
        <item name="android:textAppearance">@style/TextBodyLarge</item>

        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="PrimaryTextButton">
        <item name="android:textAppearance">@style/TextBodyLarge</item>

        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

</resources>